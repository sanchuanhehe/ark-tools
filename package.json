{
  "name": "ark-tools",
  "displayName": "ArkTS",
  "description": "Fast way to create, init, build and run ArkTS project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "HarmonyOS",
    "OpenHarmony",
    "ArkTS",
    "ArkUI"
  ],
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "[Read](command:cj.about) About Cangjie Tools\n[Create Cangjie Project](command:cj.createProject)"
      }
    ],
    "commands": [
      {
        "command": "arkts.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "menus": {
    "explorer/context": [
      {
        "when": "resourceExtname == .toml",
        "command": "cj.buildProject",
        "group": "navigation@1"
      },
      {
        "when": "explorerResourceIsFolder",
        "command": "cj.createFile",
        "group": "navigation@6"
      }
    ]
  },
  "configuration": {
    "title": "ArkTS Tools",
    "properties": {
      "arkts.ohpmPath": {
        "type": "string",
        "default": "",
        "description": "The absolute path to ohpm"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "1.7.x"
  },
  "devDependencies": {
    "@types/vscode": "^1.65.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}