{
  "name": "ark-tools",
  "icon": "icon.png",
  "displayName": "ArkTS",
  "description": "Fast way to create, init, build and run ArkTS project",
  "version": "0.0.1",
  "publisher": "michaelding",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "HarmonyOS",
    "OpenHarmony",
    "ArkTS",
    "ArkUI"
  ],
  "bugs": {
    "url": "https://gitee.com/michael-eddy/ark-tools/issues"
  },
  "homepage": "https://gitee.com/michael-eddy/ark-tools",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/michael-eddy/ark-tools.git"
  },
  "activationEvents": [
    "onLanguage:arkts",
    "onLanguage:json5"
  ],
  "main": "./out/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "languages": [
      {
        "id": "arkts",
        "aliases": [
          "ArkTs",
          "ets"
        ],
        "extensions": [
          ".ets"
        ],
        "configuration": "./templates/syntaxes/etsConfiguration.json"
      },
      {
        "id": "json5",
        "aliases": [
          "JSON5",
          "json5"
        ],
        "extensions": [
          ".json5"
        ],
        "configuration": "./templates/syntaxes/json5Configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "json5",
        "scopeName": "source.json5",
        "path": "./templates/syntaxes/json5Language.json"
      },
      {
        "language": "arkts",
        "scopeName": "source.ets",
        "path": "./templates/syntaxes/etsLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "arkts-icons",
        "label": "ArkTs Icons",
        "path": "arkts-icons.json"
      }
    ],
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "[Read](command:arkts.about) About ArkTS Tools\n[Create ArkTS Project](command:arkts.createProject)"
      }
    ],
    "commands": [
      {
        "command": "arkts.dependencies",
        "title": "Dependencies Tools"
      },
      {
        "command": "arkts.createFile",
        "title": "Create ets File"
      },
      {
        "command": "arkts.createProject",
        "title": "Create ArkTs Project"
      },
      {
        "command": "arkts.about",
        "title": "About Tools"
      },
      {
        "command": "arkts.format",
        "title": "Format Document"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "arkts.createFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceFilename == oh-package.json5",
          "command": "arkts.dependencies",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "arkts.format"
        },
        {
          "when": "resourceFilename == oh-package.json5",
          "command": "arkts.dependencies"
        }
      ]
    }
  },
  "configuration": {
    "title": "ArkTS Tools",
    "properties": {
      "arkts.ohpmPath": {
        "type": "string",
        "default": "",
        "description": "The absolute path to ohpm"
      },
      "arkts.intellisenses.modulesPath": {
        "type": "string",
        "default": "",
        "description": "The absolute path to intellisenses modules roles. \n WARNING! \n The Location MUST be a FOLDER and file name MUST like \"ets_role_***.json\""
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package --baseImagesUrl https://gitee.com/michael-eddy/ark-tools/raw/master/",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "1.7.x",
    "prettier": "^2.8.8"
  },
  "devDependencies": {
    "@types/vscode": "^1.65.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@types/prettier": "^2.7.2",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}